@model Blogy.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}




    <!-- Page content -->

    <div class="container-fluid mt--12">

        <!-- Dark table -->
        <div class="row">
            <div class="col">
                <div class="card bg-default shadow">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="text-white mb-0">Gelen Mesaj Detayı</h3>
                    </div>
                    <div class="table-responsive" style="overflow-x: auto;">
                        <table class="table align-items-center table-dark table-flush" style="width: 100%;">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">Kisi</th>
                                    <th scope="col" class="sort" data-sort="budget">İsim</th>
                                    <th scope="col" class="sort" data-sort="status">Konu</th>

                                </tr>
                            </thead>
                            <tbody class="list">



                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <a href="#" class="avatar rounded-circle mr-3">
                                                <img alt="Image placeholder" src="@Model.ImageUrl">
                                            </a>

                                        </div>
                                    </th>

                                    <td class="budget">
                                        @Model.Name @Model.Surname
                                    </td>


                                    <td class="budget">
                                        @Model.Subject
                                    </td>


                                </tr>
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col" class="sort" data-sort="name">İcerik</th>
                                    <th scope="col" class="sort" data-sort="name"></th>
                                    <th scope="col" class="sort" data-sort="name"></th>


                                </tr>
                            </thead>
                            <tr>
                                <!-- Yeni satır -->
                                <td colspan="3">
                                    <!-- colspan="3", satırın tüm sütunlarını kaplayacak şekilde ayarlanmıştır -->
                                    <textarea style="background-color:rgb(52,58,64); color: white; border-color:rgb(52,58,64);" class="form-control" rows="6">@Model.Content</textarea>
                                </td>
                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer -->
    </div>


