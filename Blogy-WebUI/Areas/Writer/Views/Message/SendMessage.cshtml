@model Blogy.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazarlar Arası Mesajlasma Paneli</h4>
            <form method="post" >
                <div class="card-body">

                    @Html.DropDownListFor(x => x.ReceiverId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                    <br />
                    <div class="form-group">
                        <input class="form-control" placeholder="Konu:" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <textarea id="compose-textarea" class="form-control" asp-for="Content" style="height: 300px"></textarea>
                    </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                    </div>
                    <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>