@using Blogy.EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;

}

<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">	Kategoriler ile ilgili islemler.</h4>
			
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Kategori</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							count++;
							<tr>
								<td>@count</td>
								<td>@item.CategoryName</td>
								<td><a href="/Admin/Categories/RemoveCategory/@item.CategoryId" class="btn btn-outline-danger">Sil</a></td>
								<td><a href="/Admin/Categories/UpdateCategory/@item.CategoryId" class="btn btn-outline-warning">Güncelle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<button type="button"  class="btn btn-outline-primary">Yeni Kategori Ekle</button>
			</div>
		</div>
	</div>
</div>
