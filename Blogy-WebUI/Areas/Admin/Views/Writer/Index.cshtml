@using Blogy.EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">
					Kullanıcılar ile ilgili işlemler.
				</h4>
		
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Ad Soyad</th>
							<th>Email</th>
							<th>Kullanıcı Adı</th>
							<th>Acıklama</th>
							<th>Mail</th>
						
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Id</td>

								<td>
									<img src="@item.ImageUrl" class="img-thumbnail rounded-pill" style="width: 50px; height: 50px;" /> @item.Name @item.Surname
								</td>
								<td>@item.Email</td>
								<td>@item.UserName</td>
								<td>@item.Description</td>
								<td>@item.Email</td>
				
							</tr>
						}
					</tbody>
				</table>
				
			</div>
		</div>
	</div>
</div>
